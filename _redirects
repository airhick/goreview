# Netlify redirects file (backup)
# This file is used as a fallback if netlify.toml redirects don't work

# Dashboard route
/dashboard /dashboard.html 200

# Config route (with or without query params)
/config /config.html 200
/config/* /config.html 200

# Create account route
/create /create.html 200
/create/* /create.html 200

# Company route (Google Sign-In)
/company /company.html 200
/company/* /company.html 200

# Pages/Configuration redirect to /create with id parameter
/pages/configuration /create?id=:id 301
/pages/configuration/ /create?id=:id 301

# Cart page
/cart /cart.html 200
/cart/ /cart.html 200

# Confirmation page
/confirmation /confirmation.html 200
/confirmation/ /confirmation.html 200

# API redirects (if needed in future)
# /api/* https://your-api-url.com/:splat 200

